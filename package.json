{
  "name": "contextswitcher",
  "productName": "Context Switcher",
  "version": "2.0.0",
  "description": "Context Switcher Manager",
  "repository": "https://github.com/mariogarridopt/ContextSwitcher",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development electronmon .",
    "start:prod": "electronmon .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "context",
    "switcging"
  ],
  "author": "Mario Garrido",
  "electronmon": {
    "patterns": [
      "!data/**"
    ]
  },
  "devDependencies": {
    "electron": "^21.1.1",
    "electronmon": "^2.0.2",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "pt.mariogarrido.contextswitcher",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "images/icon.icns"
    },
    "win": {
      "icon": "images/icon.png"
    }
  }
}
